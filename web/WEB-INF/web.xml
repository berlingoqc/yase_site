<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>ca.wquintal.helios.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>config</servlet-name>
        <servlet-class>ca.wquintal.helios.api.init.config</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>account</servlet-name>
        <servlet-class>ca.wquintal.helios.api.account</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>YaseConfigServlet</servlet-name>
        <servlet-class>ca.wquintal.helios.api.YaseConfigServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>YaseTextureServlet</servlet-name>
        <servlet-class>ca.wquintal.helios.api.YaseTextureServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>YaseModelServlet</servlet-name>
        <servlet-class>ca.wquintal.helios.api.YaseModelServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>YaseSkyBoxServlet</servlet-name>
        <servlet-class>ca.wquintal.helios.api.YaseSkyBoxServlet</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>config</servlet-name>
        <url-pattern>/api/init/config</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>account</servlet-name>
        <url-pattern>/api/account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>YaseConfigServlet</servlet-name>
        <url-pattern>/api/yase/config</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>YaseTextureServlet</servlet-name>
        <url-pattern>/api/yase/texture</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>YaseModelServlet</servlet-name>
        <url-pattern>/api/yase/model</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>YaseSkyBoxServlet</servlet-name>
        <url-pattern>/api/yase/skybox</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
